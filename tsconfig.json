{
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "alwaysStrict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "es2015"],
    "baseUrl": "./",
    "paths": {
      "Root/*": ["./*"],
      "App/*": ["src/*"],
      "Types/*": ["types/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/babel-plugin-jsx-dom-expressions",
      "./types"
    ]
  }
}
